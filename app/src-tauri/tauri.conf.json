{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Blinko",
  "version": "1.0.0",
  "identifier": "com.blinko.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1111",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../../dist/public"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Blinko",
        "width": 1024,
        "height": 768,
        "fullscreen": false,
        "resizable": true,
        "focus": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "decorations": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
